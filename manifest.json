{
	"applications": {
		"gecko": {
			"id": "dejbug_ff-tab-lister@github.com",
			"strict_min_version": "42.0"
		}
	},

	"manifest_version": 2,

	"name": "Tab Lister",
	"version": "1.4",
	"description": "Yet another (very simple) tab lister. A possible update to Binny's \"Url Lister\".",

	"author": "Dejan Budimir",
	"homepage_url": "https://github.com/dejbug/ff-tab-lister",

	"icons": {
		"16": "icons/icon-16.png",
		"32": "icons/icon-32.png"
	},

	"permissions": [
		"clipboardWrite",
		"storage", 
		"tabs"
	],

	"browser_action": {
		"default_icon": {
			"16": "icons/icon-16.png",
			"32": "icons/icon-32.png"
		},
		"default_title": "Tab Lister"
	},
	
	"background": {
		"scripts": ["background.js"]
	},
	
	"options_ui": {
		"page": "options/options.html",
		"browser_style": true
	}
}
